<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/MainActivityWelcomeLabelText" android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="50sp"
        android:id="@+id/MainActivityWelcomeLabel"
        android:textStyle="bold"
        android:gravity="center"
              android:singleLine="true"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/MainActivityLastSessionLabel1Text"
        android:id="@+id/MainActivityLastSessionLabel1"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/MainActivityTrainButton"
        android:layout_marginBottom="140dp"
        android:singleLine="true"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/MainActivityLastSessionDate"
        android:textStyle="bold"
        android:textSize="60sp"
        android:gravity="center"
        android:text="@string/MainActivityLastSessionDateText"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:singleLine="true"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/MainActivityLastSessionLabel2Text"
        android:id="@+id/MainActivityLastSessionLabel2"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_above="@+id/MainActivityTrainButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:singleLine="true"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:text="@string/MainActivityTrainButtonText"
        android:id="@+id/MainActivityTrainButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="40sp"
        android:textStyle="bold|normal"
        android:onClick="onTrainButtonClicked"
        android:singleLine="true"
        />

</RelativeLayout>
